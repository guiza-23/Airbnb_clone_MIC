<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>My reservations</h1>
    </div>
</div>

<div class="py-5">
  <div class="container">
    <div class="row">
    <% @reservations.each do |reservation| %>
      <% flat = Flat.find(reservation.flat_id) %>

      <div class="col-md-4">
        <div class="flat-card">
        <div>
          <% if flat.photo.key.present? %>
            <%= cl_image_tag reservation.flat.photo.key, crop: :fill, class:"flat_pic card-img-top" %>
          <% else %>
            <%= image_tag("unknown.jpg", class:"flat_pic card-img-top") %>
          <% end %>
        </div>
          <div class="flat-card-content reservation-content">
            <div class="flat-card-title">
              <h5 class="fw-bold"><%= flat.title %></h5>
            </div>
            <div>
              <p><span class="fw-bold">Type: </span><%= flat.category %></p>
              <p><span class="fw-bold">In: </span><%= reservation.check_in %></p>
              <p><span class="fw-bold">Out: </span><%= reservation.check_out %></p>
            </div>
            <div class="flex mx-2 justify-content-around">
              <div class="flex align-items-center">
                <i class="fa-solid fa-users mx-2"></i>
                <span><%= flat.number_of_guests %></span>
              </div>
              <div class="flex align-items-center ms-3">
                <i class="fa-solid fa-euro-sign mx-2"></i>
                <span><%= flat.price %></span>
              </div>
            </div>
          </div>
          <div class="flat-card-actions">
            <%= link_to "Info", reservation_path(reservation), style:"width: 100%", class: "btn btn-outline-info" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  </div>
</div>
