<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to "#", class: "navbar-brand" do %>
      <%= image_tag "https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/logo.png" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent" data-controller="avatar">
      <ul class="navbar-nav me-auto">
        <%# if user_signed_in? %>
          <li class="nav-item ">
            <%= link_to "Home", "/", class: "nav-link", class:"btn btn-outline-dark" %>
          </li>
          <li class="nav-item">
              <%= link_to "ver ofertas disponibles", flats_path, class:"btn btn-outline-dark" %>
          </li>
           <li class="nav-item dropdown">
              <% if user_signed_in? %>
                <%= image_tag "https://upload.wikimedia.org/wikipedia/commons/5/52/Tipos_de_azules.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
                <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                  <p><%= current_user.email %></p>
                  <%= link_to "mensajes", "#", class: "dropdown-item" %>
                  <%= link_to "mis reservas", reservations_path, class: "dropdown-item" %>
                  <%= link_to "quiero ser anfitrion", new_flat_path, class: "dropdown-item" %>
                  <%= link_to "Log out", destroy_user_session_path, class: "dropdown-item", data: {turbo_method: :delete} %>
                </div>
              <% else %>
                <%= image_tag "https://apsec.iafor.org/wp-content/uploads/sites/37/2017/02/IAFOR-Blank-Avatar-Image.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
                <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                  <%= link_to "Log in", new_user_session_path, class: "dropdown-item" %>
                </div>
              <% end %>
            </li>
      </ul>
    </div>
  </div>
</div>
