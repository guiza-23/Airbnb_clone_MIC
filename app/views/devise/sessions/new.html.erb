<section>
  <div class="banner-sign" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.2)), url(https://images.unsplash.com/photo-1470770841072-f978cf4d019e?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80);">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f| %>
        <div class="form-inputs">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card shadow-2-strong" style="border-radius: 1rem;">
            <div class="card-body p-5 text-center">

              <h3 class="mb-5">Sign IN</h3>

              <div class="form-outline mb-4">
                <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" }, id:"typeEmailX-2",for:"typeEmailX-2", class:"form-control form-label form-control-lg" %>
              </div>

              <div class="form-outline mb-4">
                <%= f.input :password, required: false, input_html: { autocomplete: "current-password" } %>
              </div>

              <!-- Checkbox -->
              <div class="form-check d-flex justify-content-start mb-4">
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>
              <div class="form-check d-flex justify-content-start mb-4">
                <%= render "devise/shared/links" %>
              </div>

              <%= f.button :submit, "Sign in",style:"width: 100%", class:"btn btn-primary btn-lg btn-block" %>

              <%# <hr class="my-4"> %>

              <div class="d-grid gap-2">
                <button class="btn btn-lg btn-block btn-primary" style="background-color: #dd4b39"
                  type="submit"><i class="fab fa-google me-2"></i> Sign in with google</button>
                <button class="btn btn-lg btn-block btn-primary mb-2" style="background-color: #3b5998;"
                  type="submit"><i class="fab fa-facebook-f me-2"></i>Sign in with facebook</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</section>
