<section>
  <div class="banner-sign" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.2)), url(https://images.unsplash.com/photo-1470770841072-f978cf4d019e?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80);">
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <div class="container py-5 h-100">
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="card-col col-12 col-md-8 col-lg-6 col-xl-5">
              <div class="card shadow-2-strong" style="border-radius: 1rem;">
                <div class="card-body p-5 text-center">

                  <h3 class="mb-5">Forgot your password?</h3>

                  <div class="form-outline mb-4">
                    <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" }, id:"typeEmailX-2",for:"typeEmailX-2", class:"form-control form-label form-control-lg" %>
                  </div>

                  <div class="form-outline mb-4">
                    <%= f.button :submit, "Send me reset password instructions", id:"typeEmailX-2",for:"typeEmailX-2", class:"btn btn-primary btn-lg btn-block form-control form-label form-control-lg" %>
                  </div>

                </div>
              </div>
            </div>
        </div>
      </div>
    <% end %>
  </div>
</section>
